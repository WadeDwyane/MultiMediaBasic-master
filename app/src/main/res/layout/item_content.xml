<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_cardview"
        android:layout_width="match_parent"
        android:layout_height="110dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp"
        card_view:cardMaxElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_process_status"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="7dip"
                android:src="@mipmap/done"/>

            <TextView
                android:id="@+id/tv_process_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/imv_process_status"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="张三三的OA数据变更申请"
                android:textColor="#000"
                android:textSize="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_below="@id/imv_process_status"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="7dip"
                android:background="#f1f1f1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_process_time"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="5dip"
                    android:src="@mipmap/time"/>

                <TextView
                    android:id="@+id/tv_process_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dip"
                    android:text="2015-08-15 15:35:20"
                    android:layout_toRightOf="@id/imv_process_time"
                    android:textColor="#bcbcbc"
                    android:layout_centerVertical="true"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_process_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dip"
                    android:layout_centerVertical="true"
                    android:text="NO.256666666"
                    android:textColor="#bcbcbc"
                    android:textSize="13sp"/>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>