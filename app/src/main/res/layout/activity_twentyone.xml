<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/launch_normal_container"
                android:layout_width="320dip"
                android:layout_height="33dip"
                android:layout_gravity="right|bottom"
                android:background="@drawable/not_selected"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_not_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="6dip"
                    android:text="我发起的"
                    android:textColor="#ff847d7b"
                    android:textSize="11sp"/>

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginLeft="74dip"
                    android:layout_marginTop="6dip"
                    android:layout_toLeftOf="@id/tv_not_selected"
                    android:src="@drawable/my_launch_normal"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/approval_selected_container"
                android:layout_width="320dip"
                android:layout_height="39dip"
                android:layout_gravity="bottom"
                android:background="@drawable/selected">

                <TextView
                    android:id="@+id/tv_my_approval_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dip"
                    android:text="我审批的"
                    android:textColor="#fff"
                    android:textSize="11sp"/>

                <ImageView
                    android:id="@+id/imv_my_approval_selected"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginLeft="74dip"
                    android:layout_marginTop="12dip"
                    android:layout_toLeftOf="@id/tv_my_approval_selected"
                    android:src="@drawable/my_approval_selected"/>
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/approval_normal_container"
                android:layout_width="320dip"
                android:layout_height="33dip"
                android:layout_gravity="bottom"
                android:background="@drawable/not_selected">

                <ImageView
                    android:id="@+id/imv_my_approval_not_selected"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dip"
                    android:layout_marginTop="6dip"
                    android:src="@drawable/my_approval_normal"/>

                <TextView
                    android:id="@+id/tv_my_approval_not_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:layout_toRightOf="@id/imv_my_approval_not_selected"
                    android:text="我审批的"
                    android:textColor="#ff847d7b"
                    android:textSize="11sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/launch_selected_container"
                android:layout_width="320dip"
                android:layout_height="39dip"
                android:layout_gravity="right"
                android:background="@drawable/selected">

                <TextView
                    android:id="@+id/tv_my_launch_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dip"
                    android:text="我发起的"
                    android:textColor="#fff"
                    android:textSize="11sp"/>

                <ImageView
                    android:id="@+id/imv_my_launch_selected"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginLeft="74dip"
                    android:layout_marginTop="12dip"
                    android:layout_toLeftOf="@id/tv_my_launch_selected"
                    android:src="@drawable/my_launch_selected"/>
            </RelativeLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_content_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    </LinearLayout>
</LinearLayout>