<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ozil.mesut.rocketlauncher"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <!--为了保证能正常使用OpenGL ES2.0的API-->
    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>

    <!--支持纹理压缩,声明纹理压缩的类型-->
    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture"/>
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.FirstActivity"/>
        <activity android:name=".ui.activity.SecondActivity"/>
        <activity android:name=".ui.activity.ThirdActivity"/>
        <activity android:name=".ui.activity.ForthActivity"/>
        <activity android:name=".ui.activity.FifthActivity"/>
        <activity android:name=".ui.activity.SixActivity"/>
        <activity android:name=".ui.activity.MediaMuxerActivity"/>
        <activity android:name=".ui.activity.SevenActivity"/>
        <activity android:name=".ui.activity.EightActivity"/>
        <activity android:name=".ui.activity.NineActivity"/>
        <activity android:name=".ui.activity.TenActivity"/>
        <activity android:name=".ui.activity.ElevenActivity"/>
        <activity android:name=".ui.activity.TwelveActivity"/>
        <activity android:name=".ui.activity.ThirteenActivity"/>
        <activity android:name=".ui.activity.FourteenActivity"/>
        <activity android:name=".ui.activity.FifteenActivity"/>
        <activity android:name=".ui.activity.SixteenActivity"/>
        <activity android:name=".ui.activity.SeventeenActivity"/>
        <activity android:name=".ui.activity.EighteenActivity"/>
        <activity android:name=".ui.activity.NineteenActivity"/>
        <activity android:name=".ui.activity.TwentyActivity"/>
        <activity android:name=".ui.activity.TwentyOneActivity"/>

        <service android:name=".service.PlayAudioService"/>

    </application>

</manifest>